template(name="draw")
  .col-md-8
    .row
      |#{linesCount} lines found
    .row
      .col-md-10
        each colors
          +color
      .col-md-2
        button(
          type="button",
          class="btn btn-danger clear pull-right",
          )
            |clear draw
            span(class="glyphicon glyphicon-remove")
    .row
      canvas(
        id="myCanvas",
        width="960",
        height="400",
        )
  .col-md-4 
    +chat
